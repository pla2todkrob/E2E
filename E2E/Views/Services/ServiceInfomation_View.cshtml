@model E2E.Models.Tables.ServiceDocuments

@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">@Html.DisplayFor(m => m.Master_Documents.Document_Name)</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <dl>
        <dt>@Html.DisplayNameFor(m => m.ServiceDocument_Name)</dt>
        <dd><a href="@Model.ServiceDocument_Path" target="_blank" download="">@Html.DisplayFor(m => m.ServiceDocument_Name)</a></dd>
        <dt>@Html.DisplayNameFor(m => m.ServiceDocument_Remark)</dt>
        <dd>
            <span class="PreLine">
                @Html.DisplayFor(m => m.ServiceDocument_Remark)
            </span>
        </dd>
    </dl>
</div>