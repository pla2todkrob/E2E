@model IEnumerable<E2E.Models.Views.ReportKPI_Overdue>

@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">Total over due: @Model.Count() tasks.</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Status_Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Service_Subject)</th>
                    <th>@Html.DisplayNameFor(m => m.User_Name)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="fit text-center"><span class="@item.Status_Class">@Html.DisplayFor(m => item.Status_Name)</span></td>
                    <td>
                        <small class="font-weight-bold">[@Html.DisplayFor(m => item.Service_Key)]</small>&nbsp;
                        <a href="@Url.Action("ServiceInfomation","Services",new { id=item.Service_Id })" title="@Html.DisplayFor(m => item.Service_Subject)" target="_blank">@Html.DisplayFor(m => item.Service_Subject)</a>
                    </td>
                    <td class="fit text-center">@Html.DisplayFor(m => item.User_Name)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
