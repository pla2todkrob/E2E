@model E2E.Models.Views.clsServices

@{
    ViewBag.Title = "Action";
}
@section scripts{
    <script src="~/Asset/Service.min.js"></script>
    <script>
        $(function () {
            setTable_File('#reqFiles', true, false);
            setDropdown_Form();
        });

        $(document).on('submit', '#SaveForm', function (e) {
            e.preventDefault();
            callSubmitModal('@Url.Action("Action_Set", "Services")');
            return false;
        });
    </script>
}
@section breadcrumb{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Services")">Service</a></li>
            <li class="breadcrumb-item active" aria-current="page">Action</li>
        </ol>
    </nav>
}

<blockquote class="blockquote text-right">
    <p class="mb-0">[@Model.Services.Service_Key]&nbsp;@Html.DisplayFor(m => m.Services.Service_Subject)</p>
    <small class="blockquote-footer"><cite title="@Html.DisplayFor(m => m.Services.Create)">@Html.DisplayFor(m => m.Services.Create)</cite></small>
</blockquote>

<div class="card mb-3">
    <div class="card-body">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-7 col-xl-8 mb-3">
                <dl class="row">
                    <dt class="col-12 col-lg-3 col-xl-2">@Html.DisplayNameFor(m => m.Services.Service_Description)</dt>
                    <dd class="col-12 col-lg-9 col-xl-10">@Html.DisplayFor(m => m.Services.Service_Description)</dd>
                    <dt class="col-4 col-lg-3 col-xl-2">@Html.DisplayNameFor(m => m.Services.Users.User_Code)</dt>
                    <dd class="col-8 col-lg-9 col-xl-10">@Html.DisplayFor(m => m.Services.Users.User_Code)</dd>
                    @if (Model.Services.Update.HasValue)
                    {
                        <dt class="col-4 col-lg-3 col-xl-2">@Html.DisplayNameFor(m => m.Services.Update)</dt>
                        <dd class="col-8 col-lg-9 col-xl-10">@Html.DisplayFor(m => m.Services.Update)</dd>
                    }

                    <dt class="col-4 col-lg-3 col-xl-2">@Html.DisplayNameFor(m => m.Services.System_Priorities.Priority_Name)</dt>
                    <dd class="col-8 col-lg-9 col-xl-10"><span class="@Model.Services.System_Priorities.Priority_Class">@Html.DisplayFor(m => m.Services.System_Priorities.Priority_Name)</span></dd>
                    <dt class="col-4 col-lg-3 col-xl-2">@Html.DisplayNameFor(m => m.Services.Service_DueDate)</dt>
                    <dd class="col-8 col-lg-9 col-xl-10"><b>@Html.DisplayFor(m => m.Services.Service_DueDate)</b></dd>
                    <dt class="col-4 col-lg-3 col-xl-2">Files</dt>
                    <dd class="col-8 col-lg-9 col-xl-10">
                        @Model.ServiceFiles.Count Attachments
                        <ul class="list-unstyled">
                            @foreach (var item in Model.ServiceFiles.OrderBy(o => o.ServiceFile_Extension))
                            {
                                <li>
                                    <a href="@item.ServiceFile_Path" target="_blank" title="@item.ServiceFile_Name"><i class="fa fa-download"></i>&nbsp;@item.ServiceFile_Name</a>
                                </li>

                            }
                        </ul>
                    </dd>
                    @if (Model.Services.Required_Approve_User_Id.HasValue)
                    {
                        <dt class="col-12 col-lg-3 col-xl-2">@Html.DisplayNameFor(m => m.Required_User_Code)</dt>
                        <dd class="col-12 col-lg-9 col-xl-10">@Html.DisplayFor(m => m.Required_User_Code) - <b>@Html.DisplayFor(m => m.Services.Required_Approve_DateTime)</b></dd>
                    }
                    @if (Model.Services.Approved_User_Id.HasValue)
                    {
                        <dt class="col-12 col-lg-3 col-xl-2">@Html.DisplayNameFor(m => m.Approved_User_Code)</dt>
                        <dd class="col-12 col-lg-9 col-xl-10">@Html.DisplayFor(m => m.Approved_User_Code) - <b>@Html.DisplayFor(m => m.Services.Approved_DateTime)</b></dd>
                    }
                    @if (Model.Services.Commit_User_Id.HasValue)
                    {
                        <dt class="col-12 col-lg-3 col-xl-2">@Html.DisplayNameFor(m => m.Commit_User_Code)</dt>
                        <dd class="col-12 col-lg-9 col-xl-10">@Html.DisplayFor(m => m.Commit_User_Code) - <b>@Html.DisplayFor(m => m.Services.Commit_DateTime)</b></dd>
                    }
                </dl>

                <button class="btn btn-primary ml-auto" onclick="callModal('@Url.Action("Action_Set","Services",new { id=Model.Services.Service_Id })')">Start job</button>
            </div>
            <div class="col-12 col-md-6 col-lg-5 col-xl-4 d-flex align-items-stretch">
                <div class="card w-100">
                    <div class="card-header">
                        <h5 class="card-title">Comments</h5>
                    </div>
                    <div class="card-body">
                        @{ Html.RenderAction("_CommentHistory", "Services", new { id = Model.Services.Service_Id }); }
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>
@{ Html.RenderAction("_RefService", "Services", new { id = Model.Services.Service_Id }); }