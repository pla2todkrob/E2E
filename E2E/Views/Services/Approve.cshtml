@{
    ViewBag.Title = "Approve";
}

@section scripts{

    <script>
        $(function () {
            reloadTable();
        });

        function reloadTable() {
            callTable('@Url.Action("Approve_Table", "Services",new {type = false})', true, false, 0, '#pending').then(function () {
                callTable('@Url.Action("Approve_Table", "Services", new { type = true})', true, false, 0, '#success');
            });

        }
    </script>
}

@section breadcrumb{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Departments</li>
            <li class="breadcrumb-item active" aria-current="page">Approve</li>
        </ol>
    </nav>
}

<div class="card shadow">
    <div class="card-header">
        <ul class="nav nav-pills  mb-3" id="pills-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-pending" role="tab" aria-controls="pills-pending" aria-selected="true">Waiting Approve</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-success" role="tab" aria-controls="pills-success" aria-selected="false">Approval</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-pending" role="tabpanel" aria-labelledby="pills-home-tab">
                <div class="row" id="pending"></div>
            </div>
            <div class="tab-pane fade" id="pills-success" role="tabpanel" aria-labelledby="pills-profile-tab">
                <div class="row" id="success"></div>
            </div>
        </div>
    </div>
</div>