@model E2E.Models.Tables.TopicComments

@{
    Layout = null;
}



<div class="modal-header">
    <h5 class="modal-title" id="modalTitle">Report</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    @using (Html.BeginForm("", "", FormMethod.Post, new { id = "SaveReportComment", name = "SaveReportComment", @class = "was-validated", enctype = "multipath/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.TopicComment_Id)
        <div class="form-row">

            <div class="form-group col-md-12">
                @Html.LabelFor(m => m.Comment_Content):
                @Html.DisplayFor(m => m.Comment_Content, new { @class = "form-control", required = "required", rows = 8 })
            </div>
            <hr />
            <div class="form-group col-md-12">
                <textarea class="form-control" id="CommentReportUser" name="CommentReportUser" required="required"></textarea>
            </div>
        </div>
    }
</div>
<div class="modal-footer">

    <button type="submit" class="btn btn-primary" form="SaveReportComment"><i class="fa fa-check"></i></button>
</div>

