@model IEnumerable<E2E.Models.Views.clsTopicView>


@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div id="tbView" class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.UserCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Department)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Count)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.LastTime)
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(i => item.UserCode)
                    </td>
                    <td>
                        @Html.DisplayFor(i => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(i => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(i => item.Count)
                    </td>
                    <td>
                        @Html.DisplayFor(i => item.LastTime)
                    </td>
                </tr>

                }
            </tbody>
        </table>
    </div>

</div>
<div class="card-footer">
    <div class="d-flex">
        @if (!string.IsNullOrEmpty(Model.FirstOrDefault()?.Name.ToString()))
        {
            <button class="btn btn-primary ml-auto" type="button" onclick="DownloadToExcel()">Export to Excel</button>
        }
    </div>
</div>