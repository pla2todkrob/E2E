}

@section scripts{

    <script>

        $(function () {
            reloadTable();

        });

        $(document).on('submit', '#SaveForm', function (e) {
            e.preventDefault();
            callSubmitPage('@Url.Action("WorkRoot_Form", "Management")', this);
            return false;
        });

        function reloadTable() {

            callTable('@Url.Action("WorkRoot_Table", "Management")', true,true, [1,4]).then(function () {

            });
        }
    </script>
}

@section breadcrumb{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
            <li class="breadcrumb-item ">Managements</li>
            <li class="breadcrumb-item active">Work roots</li>
        </ol>
    </nav>
}
