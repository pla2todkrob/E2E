@model E2E.Models.Views.AuditReport_Filter

@{
    Layout = null;
}

@using (Html.BeginForm("AuditReport", "Management", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Date_From, new { @class = "mr-1" })
        @Html.TextBoxFor(m => m.Date_From, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", max = DateTime.Today.ToString("yyyy-MM-dd") })
    </div>
    <div class="form-group mx-2">
        @Html.LabelFor(m => m.Date_To, new { @class = "mr-1" })
        @Html.TextBoxFor(m => m.Date_To, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", max = DateTime.Today.ToString("yyyy-MM-dd") })
    </div>
    <button type="submit" class="btn btn-primary">SEARCH</button>
}