@{
    ViewBag.Title = "Plants";
}

@section scripts{
    <script>
        $(function () {
            reloadTable();

        });

        function reloadTable() {
            callTable_Normal('@Url.Action("Plants_Table", "Masters")');
        }

        $(document).on('submit', '#SaveForm', function (e) {
            e.preventDefault();
            callSubmitModal('@Url.Action("Plants_Form", "Masters")', this);
            return false;
        });
    </script>
}

@section breadcrumb{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
            <li class="breadcrumb-item active">Master</li>
            <li class="breadcrumb-item active" aria-current="page">Plants</li>
        </ol>
    </nav>
}

<div class="card shadow">
    <div class="card-header">
        <h2 class="card-title">Plants</h2>
    </div>
    <div class="card-body">
        <div class="table-responsive" id="datalist">
        </div>
    </div>
</div>
