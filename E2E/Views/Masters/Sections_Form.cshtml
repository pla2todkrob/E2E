@model E2E.Models.Tables.Master_Sections

@{
    Layout = null;
}

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "SaveForm", @class = "was-validated" }))
{
@Html.AntiForgeryToken()

<div class="modal-header">
    <h5 class="modal-title" id="modalTitle">Form</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Section_Id)
    <div class="form-row">

        <div class="form-group col-md-12">
            @Html.LabelFor(m => m.Master_Departments.Division_Id)
            @Html.DropDownListFor(m => m.Master_Departments.Division_Id, new SelectList(ViewBag.DivisionsList, "Value", "Text"), new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group col-md-12">
            @Html.LabelFor(m => m.Department_Id)
            @Html.DropDownListFor(m => m.Department_Id, new SelectList(ViewBag.DepartmentsList, "Value", "Text"), new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group col-md-12">
            @Html.LabelFor(m => m.Section_Name)
            @Html.TextBoxFor(m => m.Section_Name, new { @class = "form-control", required = "required" })
        </div>
    </div>
    <div class="form-group form-check">
        @Html.CheckBoxFor(m => m.Active, new { @class = "form-check-input" })
        @Html.LabelFor(m => m.Active, new { @class = "form-check-label" })
    </div>
</div>
<div class="modal-footer">
    @{
            if (!ViewBag.IsNew)
            {
        <button type="button" class="btn btn-outline-danger mr-auto" onclick="callDeleteItem('@Url.Action("Sections_Delete","Masters",new { id=Html.ValueFor(w=>w.Section_Id)})')"><i class="fa fa-trash" aria-hidden="true"></i></button>
            }
    }

    <button type="submit" class="btn btn-primary"><i class="fa fa-check" aria-hidden="true"></i></button>
</div>
}
