@model E2E.Models.Tables.Master_InquiryTopics

@{
    Layout = null;
}

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "SaveForm", @class = "was-validated" }))
{
@Html.AntiForgeryToken()

<div class="modal-header">
    <h5 class="modal-title" id="modalTitle">Form</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.InquiryTopic_Id)
    <div class="form-row">
        <div class="form-group col-3">
            @Html.LabelFor(m => m.InquiryTopic_Index)
            @Html.TextBoxFor(m => m.InquiryTopic_Index, new { @class = "form-control", required = "required", type = "number" })
        </div>
        <div class="form-group col-12">
            @Html.LabelFor(m => m.Description_TH)
            @Html.TextBoxFor(m => m.Description_TH, new { @class = "form-control", required = "required" })
        </div>
        <div class="form-group col-12">
            @Html.LabelFor(m => m.Description_EN)
            @Html.TextBoxFor(m => m.Description_EN, new { @class = "form-control", required = "required" })
        </div>
    </div>
</div>
<div class="modal-footer">
    @{
            if (!ViewBag.IsNew)
            {
        <button type="button" class="btn btn-outline-danger mr-auto" onclick="callDeleteItem('@Url.Action("InquiryTopic_Delete","Masters",new { id=Html.ValueFor(w=>w.InquiryTopic_Id)})')"><i class="fa fa-trash" aria-hidden="true"></i></button>
            }
    }
    <button type="submit" class="btn btn-primary"><i class="fa fa-check" aria-hidden="true"></i></button>
</div>
}