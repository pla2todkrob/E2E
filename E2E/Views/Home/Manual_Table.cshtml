@model IEnumerable<E2E.Models.Tables.System_Manuals>

@{
    Layout = null;
}

<div class="col-12">
    <h3>Manual</h3>
    <div class="card">
        <div class="card-body">
            <table class="table-borderless table-hover nowrap w-100">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(m => m.Manual_Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.System_Language.Language_Name)

                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.System_ManualType.Manual_TypeName)
                        </th>
                        <th>
                          @Html.DisplayName("Download")
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(m => item.Manual_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(i => item.System_Language.Language_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(i => item.System_ManualType.Manual_TypeName)
                            </td>
                            <td>
                                <button class="btn" type="button" onclick=" window.open('@Html.DisplayFor(m=>item.Manual_Path)', '_blank')"><i class="fa fa-cloud-download text-primary"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

