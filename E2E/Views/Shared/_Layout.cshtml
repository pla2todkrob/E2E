<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Nopparat Thongnuepad">
    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
    <link rel="manifest" href="~/site.webmanifest">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <title>@ViewBag.Title - E2E one stop service</title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("css", required: false)
</head>
<body>
    <nav class="navbar sticky-top navbar-expand-xl navbar-light bg-light">
        <div class="container-sm container-fluid">
            @{ Html.RenderAction("_NavbarBrand", "Configurations"); }
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar_top" aria-controls="navbar_top" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            @{ Html.RenderAction("_Navbar", "Configurations"); }
        </div>
    </nav>
    <div id="objSpin"></div>

    <div class="container-sm container-fluid bg-white py-3">
        @RenderSection("breadcrumb", required: false)
        @RenderBody()
    </div>

    <button onclick="topFunction()" id="btnToTop" title="Go to top" class=""><i class="fa fa-arrow-circle-up "></i></button>

    <footer class="mt-3">
        <small>&copy;&nbsp;@{ Html.RenderAction("_Copyright", "Configurations"); }</small>
    </footer>

    <div class="modal fade" id="modalArea" tabindex="-1" role="dialog" aria-labelledby="modalTitle" data-backdrop="static" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document" id="dialog">
            <div class="modal-content" id="modalContent">
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
    <script>
        $(document).on('submit', '#SaveChangePassword', function (e) {
            e.preventDefault();
            callSubmitModal('@Url.Action("ChangePassword", "Users")',this);
            return false;
        });
    </script>
</body>
</html>
