@model E2E.Models.Tables.ChatBotAnswer

@{
    Layout = null;
}


<div class="modal-header">
    <h5 class="modal-title" id="modalTitle">@Html.DisplayNameFor(m => m.ChatBotQuestion.Question):&nbsp;<span>@Html.DisplayFor(m => m.ChatBotQuestion.Question)</span></h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    @using (Html.BeginForm("", "", FormMethod.Post, new { id = "EditForm", name = "EditForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.ChatBotAnswer_Id)
        <div class="form-group">
            @Html.LabelFor(m => m.Answer)
            @Html.TextBoxFor(m => m.Answer, new { @class = "form-control" })
        </div>
    }
</div>
<div class="modal-footer">
    <button type="submit" class="btn btn-primary" form="EditForm"><i class="fa fa-check" aria-hidden="true"></i></button>
</div>

