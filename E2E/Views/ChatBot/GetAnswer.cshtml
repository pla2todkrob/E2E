@model E2E.Models.Views.ClsChatbotQA

@{
    Layout = null;
}

@if (Model.Parents.Count > 0)
{
    <ol class="breadcrumb mb-3">
        <li class="breadcrumb-item"><a href="javascript:reloadTable()"><i class="fa fa-fast-backward" aria-hidden="true"></i></a></li>
        @foreach (var item in Model.Parents)
        {
            if (item.Value.Key != Model.Parents.LastOrDefault().Value.Key)
            {
                <li class="breadcrumb-item"><a href="javascript:reloadTable('@item.Value.Value',false,false)">@item.Key</a></li>
            }
            else
            {
                <li class="breadcrumb-item">@item.Key</li>
            }
        }
    </ol>
}

@if (Model.ChatBotAnswers.Count > 0)
{
    <ul>
        @foreach (var item in Model.ChatBotAnswers)
        {
            <li class="PreLine">@string.Format("{0}: {1}", item.ChatBotQuestion.Question, item.Answer)</li>
        }
    </ul>
}
